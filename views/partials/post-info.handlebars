<article class="post card">
    <div class="card-header">
        <div class="title">
            {{title}}
        </div>
        <div class="meta">
            Posted by {{user.username}} on {{format_date createdAt}}
        </div>
    </div>
    <div class="card-body">  
        <div class="content">
            {{post_body}}
        </div>
        <div>  
            {{comments.length}} {{format_plural 'comment' comments.length}}
        </div>
    </div>
</article>