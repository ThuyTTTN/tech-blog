<article class="post">
  <div class="title">
    <a href="/post/{{id}}" >{{title}}</a>
    <span>{{post_body}}</span>
  </div>
  <div class="meta">
    {{user.username}}
    on
    {{format_date createdAt}}
    |
    <p>{{comments.length}}
      {{format_plural "comment" comments.length}}</p>
  </div>
</article>